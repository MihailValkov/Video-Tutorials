<div>
    {{#if isLogged}}
    <h1 class="text-center">Courses</h1>
    <section>
        <a href="/course/create" class="btn btn-warning ">Create Course</a>
        <form class="search float-right" action="/course/search" method="GET">
            <label>Search: </label>
            <input name="search" type="text">
            <input type="submit" class="btn btn-info" value="Search">
        </form>
    </section>
    {{else}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Video Tutorials</h1>
            <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
        </div>
    </div>
    <h1 class="text-center">Top Courses</h1>
    {{/if}}
    <div class="container mt-3">
        {{#if courses}}
        <div class="row d-flex justify-content-center">
            <div class="card-deck">
                {{#if isLogged}}
                {{#each courses}}
                <div class="card mb-4">
                    <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                    </div>
                        <div class="card-footer">
                        <a href="/course/details/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                        <small class="float-right">{{createdAt}}</small>
                        </div>
                </div>
                {{/each}}
                {{else}}
                 {{#each courses}}
                <div class="card mb-4">
                    <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{title}}</h4>
                    </div>
                </div>
                {{/each}}
                 {{/if}}
            </div>
        </div>
        {{else}}
        <h4 class="text-center">No courses...</h4>
        {{/if}}

    </div>
</div>